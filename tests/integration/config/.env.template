# Integration Test Environment Configuration
# Copy this file to .env and fill in your GitLab server details

# ============================================================================
# GitLab Configuration
# ============================================================================
# Your local GitLab server URL (with or without port)
# Examples:
#   - http://localhost:8929
#   - https://gitlab.example.com
GITLAB_URL=http://localhost:8929

# GitLab root user credentials (used to create the parent group)
GITLAB_ROOT_USERNAME=root
GITLAB_ROOT_PASSWORD=your_root_password_here

# Parent GitLab group ID where the test organization will be created
# This group should be created by GitLab root with an owner token
# Token scopes required: api, read_repository, write_repository
GITLAB_PARENT_GROUP_ID=

# GitLab group owner token (for the parent group)
# This token is used by Computor to manage organizations within the parent group
GITLAB_TOKEN=

# ============================================================================
# Computor Backend API Configuration
# ============================================================================
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=computor_test
DB_USER=computor
DB_PASSWORD=computor

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# Temporal Configuration
# ============================================================================
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default

# ============================================================================
# MinIO Configuration
# ============================================================================
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# ============================================================================
# Test User Passwords (optional, defaults are provided in deployment.yaml)
# ============================================================================
ADMIN_PASSWORD=admin123
LECTURER_PASSWORD=lecturer123
TUTOR_PASSWORD=tutor123
STUDENT_PASSWORD=student123

# ============================================================================
# Test Configuration
# ============================================================================
# Run tests in verbose mode
TEST_VERBOSE=true

# Stop on first failure
TEST_FAIL_FAST=false

# Number of parallel test workers
TEST_WORKERS=1
