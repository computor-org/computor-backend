# Production-specific environment variables

# SYSTEM ENV
SYSTEM_DEPLOYMENT_PATH=/tmp/computor
API_URL=http://uvicorn:8000
API_ROOT_PATH=/tmp/execution-backend
API_LOCAL_STORAGE_DIR=${API_ROOT_PATH}/shared
SYSTEM_GIT_NAME="Computor API"
SYSTEM_GIT_EMAIL=noreply@domain.com

# DATABASE
POSTGRES_HOST=postgres
POSTGRES_PORT=5437
POSTGRES_URL=${POSTGRES_HOST}:${POSTGRES_PORT}
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_secret
POSTGRES_DB=computor

# REDIS
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# DEBUG
DEBUG_MODE=production

# SECURITY: Disable debug info in API responses
# CRITICAL: MUST be set to true in production for security
DISABLE_API_DEBUG_INFO=true

# WORKER CONFIGURATION
TEMPORAL_WORKER_REPLICAS=2

# TEMPORAL CONFIGURATION
TEMPORAL_HOST=temporal
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default
